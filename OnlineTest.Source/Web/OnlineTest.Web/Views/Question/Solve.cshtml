@model OnlineTest.Web.Models.QuestionViewModel

@using (Html.BeginForm("Solve", "Question", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input id="questionId" name="questionId" value="@Model.Id" type="hidden"/>
    <input type="hidden" name="selectedAnswerId" id="selectedAnswerId"/>
    foreach (var answer in Model.Answers)
    {
        <div class="form-group">
            @Html.Label(answer.Text, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.RadioButton("answer", answer.Id)
            </div>
        </div>
    }


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Next question" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
